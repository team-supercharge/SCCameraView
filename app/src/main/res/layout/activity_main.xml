<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <io.supercharge.sccameraview.SCCameraView
        android:id="@+id/video_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/camera_aspect_ratio_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_aspect_ratio_white"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/camera_take_picture_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_white"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/camera_record_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_videocam_white"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:id="@+id/camera_switch_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_switch_camera_white"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</RelativeLayout>
